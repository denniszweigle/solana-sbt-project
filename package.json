    "nft",
    "metaplex",
    "umi",
    "mpl-core",
    "blockchain",
    "non-transferable",
    "revocable",
    "governance",
    "devnet",
    "github-pages"
  ],
  "author": "denniszweigle",
  "license": "MIT",
  "dependencies": {
    "@metaplex-foundation/mpl-core": "^1.0.0",
    "@metaplex-foundation/umi": "^0.9.0",
    "@metaplex-foundation/umi-bundle-defaults": "^0.9.0",
    "@solana/web3.js": "^1.95.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/denniszweigle/solana-sbt-project.git"
  },
  "bugs": {
    "url": "https://github.com/denniszweigle/solana-sbt-implementation/issues"
  },
