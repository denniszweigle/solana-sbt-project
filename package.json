{
  "name": "solana-sbt-implementation",
  "version": "1.0.0",
  "description": "Complete Solana Soul-Bound Token (SBT) implementation using Metaplex Umi and MPL Core with GitHub Pages hosting",
  "type": "module",
  "main": "src/corrected_sbt_logic.mjs",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "create-sbt": "node src/sbt_logic.mjs",
